set {GAME.on_dialog} = true
set {GAME.on_2d} = true
join player leftmost [animation="Fade In Up" wait="true"]
player: Deixe-me ver que horas s達o...
if {clockState} == "early":
	player: Ainda s達o {clockTime}
elif {clockState} == "late":
	if {} == false:
		player: Nossa! S達o {clockTime}
		player: Preciso ir embora.
	else:
		player: Nossa! S達o {clockTime}
set {GAME.on_dialog} = false
set {GAME.on_2d} = false
[signal arg="clock"]